import java.util.HashMap;
import java.util.Scanner;


public class TextUnique {
public static void main(String[] args) {
	

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter text: ");
        String text = sc.nextLine();
        String[] words = text.split("\\W+");
       
        System.out.println(words.length);
    
	
	
	HashMap<String,Integer> unikalnidumi=new HashMap<String,Integer>();
	
	for(String dumi:words){
		
		Integer count=unikalnidumi.get(dumi);
		if(count==null){
			count=0;
			unikalnidumi.put(dumi, count+1);
	}
		
	
		
}
System.out.println(unikalnidumi);
}
}
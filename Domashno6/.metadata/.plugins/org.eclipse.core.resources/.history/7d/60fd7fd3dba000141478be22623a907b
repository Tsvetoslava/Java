
public class Counter {
public static void main(String[] args) {
	
	
	String word="ivan";
	
	
	String text="ivan, adgth ivan";
	int counter=0;
	
	String[] parts = text.split("\\W+");
	
	for (int i = 0; i < parts.length; i++) {
	if	(word.equals(parts[i])){
		counter++;
		System.out.println(counter);
	}
	
	}
}
}

		  String str = "This represents <b>HTML bold tag</b> and <i>italic tag</i>";
		    java.util.regex.Pattern p = null;
		    p = java.util.regex.Pattern.compile("(<.*>)");
		    java.util.regex.Matcher m = p.matcher(str);
		    while(m.find()){
		      System.out.println(m.group());
		    }
	
	}
}

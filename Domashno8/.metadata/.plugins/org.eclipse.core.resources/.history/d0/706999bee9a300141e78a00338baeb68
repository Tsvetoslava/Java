
public class QuickSort {
public static void main(String[] args) {
	
	
	  int [] arr= {45,26,12,345,24,456,464,765,47,2}; 
	  for (int i = 0; i < arr.length; i++) {
		System.out.print(arr[i]+" ");
	}
	  Quicksort(arr, 0, arr.length-1);
	  for (int i : arr) {
		System.out.print(i);
	}
      
	  
}


	 
	 
	   public static int part(int arr[], int f, int l) {
	      int pivot = arr[f];
	      while (f < l) {
	         while (arr[f] < pivot) f++;
	         while (arr[l] > pivot) l--;
	         int temp = arr[f];
		      arr[f] = arr[l];
		      arr[l] = temp;
	      }
	      return f;
	   }
	 
	   public static void Quicksort(int arr[], int f, int l) {
	      if (f >= l) return;
	      int pivotIndex = part(arr, f, l);
	      Quicksort(arr, f, pivotIndex);
	      Quicksort(arr, pivotIndex+1, l);
	   }
}
